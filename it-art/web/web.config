<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Language" enabled="true">
                    <match url="^([^/\.]+)/?$" ignoreCase="false" />
                    <action type="Rewrite" url="/?page={R:1}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
